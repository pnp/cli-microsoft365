{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["es2020", "dom"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "./**/test-projects",
    "./**/pcf-init/assets",
    "./**/solution-init/assets",
    "./**/package-generate/assets",
    "node_modules",
    "docs"
  ]
}